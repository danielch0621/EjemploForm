<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemploForm.Detalles"
             Title="Detalles">
    <VerticalStackLayout>

        <Frame BorderColor="Black">
            <StackLayout>
                <Entry x:Name="lblId" IsReadOnly="True"></Entry>
                <Entry x:Name="lblNombre"></Entry>
                <Entry x:Name="lblEdad"></Entry>
                <Entry x:Name="lblOcupacion"></Entry>
                <Entry x:Name="lblDireccion"></Entry>
            </StackLayout>
        </Frame>
        <HorizontalStackLayout>
            <Button x:Name="btnRegresar"
                    Text="Regresar"
                    Clicked="btnRegresar_Clicked"></Button>
            <Button x:Name="btnActualizar"
                    Text="Actualizar"
                    Clicked="btnActualizar_Clicked"></Button>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>