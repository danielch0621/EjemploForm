<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemploForm.ListaRegistros"
             Title="ListaRegistros">
    <VerticalStackLayout>

        <SearchBar x:Name="txtBuscar"
                   TextChanged="txtBuscar_TextChanged">
        </SearchBar>
        <CollectionView x:Name="Lista"
                        SelectionMode="Single">
            <CollectionView.Header>
                <Grid ColumnDefinitions="*,*,*,*,*,*,*">
                    <Label Text="ID"
                           Grid.Column="0"
                           FontSize="Medium"></Label>
                    <Label Text="Nombre"
                           Grid.Column="1"
                           FontSize="Medium"></Label>
                    <Label Text="Edad"
                           Grid.Column="2"
                           FontSize="Medium"></Label>
                    <Label Text="Ocupacion"
                           Grid.Column="3"
                           FontSize="Medium"></Label>
                    <Label Text="Direccion"
                           Grid.Column="4"
                           FontSize="Medium"></Label>

                </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,*,*,*,*,*,*">

                        <Label Text="{Binding ItemArray[0]}"
                               Grid.Column="0"></Label>
                        <Label Text="{Binding ItemArray[1]}"
                               Grid.Column="1"></Label>
                        <Label Text="{Binding ItemArray[2]}"
                               Grid.Column="2"></Label>
                        <Label Text="{Binding ItemArray[3]}"
                               Grid.Column="3"></Label>
                        <Label Text="{Binding ItemArray[4]}"
                               Grid.Column="4"></Label>
                        <Button Text="Detalles"
                                Clicked="Button_Clicked"
                                Grid.Column="5"></Button>
                        <Button Text="Borrar"
                                x:Name="btnBorrar"
                                Clicked="btnBorrar_Clicked"
                                Grid.Column="6"></Button>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>